        <script>

            var count=0;
            $('#myTextarea').keypress(function(e){
                count++;

                document.getElementById("characterCount").innerHTML = (2000-(count));
               
            });

            $('#myTextarea').keydown(function(e){
                if (e.keyCode === 8 && count!== 0)
                    count--;

                document.getElementById("characterCount").innerHTML = (2000-(count));
                
            });
            
            document.getElementById("characterCount").innerHTML = 2000;

        </script>
